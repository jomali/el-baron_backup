			} else if (code == 6) { ! FIXME
				self.state = 6;
				print "—Tus esfuerzos por aliviar el sufrimiento que tú mismo has creado son nobles pero, ¿son suficientes?";
			} else if (DiarioMaria.is_destroyed()) {
				self.state = 7;
