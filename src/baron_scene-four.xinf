!! @Gargola
Character	Gargola "gárgola" Limbo
 has	female,
 with	name_f 'gargola',
		name_m 'monstruo',
		gender G_FEMENINO,
		adjectives 'piedra' 'roca',
		!!------------------
		appears [
			result;
			result = false;
			if (self notin EntradaCastillo) {
				result = true;
				move self to EntradaCastillo;
				print "El repentino sonido de un aleteo te empuja a mirar a lo alto, hacia las almenas donde las monstruosas gárgolas se hierguen como sombras oscuras, pero no eres capaz de verlo hasta que aterriza frente a ti, a apenas unos pasos de distancia. Uno de esos demonios de roca maciza, grande como un hombre, con dos ojos negros como la tinta que te escrutan con intensidad.";
				new_line;
				ChoiceSetManager.start(ConversacionGargola);
			}
			return result;
		],
		description [;
			print "Un monstruo de piedra de rasgos demoníacos, grande como un hombre, con unas enormes alas de murciélago.";
			new_line;
			return true;
		],
