		],
;

ChoiceSetItem	MenuSalir
 with	entry [;
			PRT__("Salir", 0, REMARKABLE_OBJECT);
			print " de la aplicación";
			return true;
		],
		keys 'salir' 'quitar' 'fin',
		!!------------------
		append_choice_set false,
		final_choice true,
		reaction [;
			print "Salir de la aplicación.";
			new_line;
			return true;
		],
;
