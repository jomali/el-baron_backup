			new_line;
			return true;
		],
;

ChoiceSetItem	MenuConfiguracion
 with	entry [;
			PRT__("Configuración", 0, REMARKABLE_OBJECT);
			return true;
		],
		keys 'configuracion' 'config' 'opciones',
		!!------------------
