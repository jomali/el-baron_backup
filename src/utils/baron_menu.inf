 with	entry [;
			PRT__("Recuperar", 0, REMARKABLE_OBJECT);
			print " partida guardada";
			return true;
		],
		keys 'cargar' 'recuperar',
		!!------------------
		append_choice_set false,
		final_choice true,
		reaction [;
