         Wear: if(jas has worn && kleding hasnt worn) "You cannot wear your work clothes over your winter coat.";
	 Disrobe: if(jas has worn && kleding has worn)
	             "You will have to take off your coat before you can take off your work clothes.";
	 Burn:
	     if(TestScope(toorts,player)) {
	       if(second == toorts || second == nothing) {
	         if(toorts has general) {
		   if(Baron.status == 5) {
		       "In these empty halls, not many will be impressed by your self-immolation.";
