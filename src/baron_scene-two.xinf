Object over_deur
 class Item,
  with name '.p' 'door' '.p' 'door' 'to' '.x' 'the' '.or' 'my' '.or' 'our' 'bedroom' '.or' 'landing',
       short_name [;
          if (location == mijnslaap) print "door to the landing";
	  else print "door to the bedroom";
	  return true;
         ],
       description [;
          if (location == mijnslaap) "The close-fitting door separates your bedroom from the landing, and hence from the rest of the house.";
	  else "This door leads back to the bedroom.";

	 ],
       found_in mijnslaap overloop,
       door_dir [;
         if (location == mijnslaap) {return n_to;}
	 else {return s_to;};
	 ],
       door_to [;
         if (location == mijnslaap) return overloop;
	 else return mijnslaap;
         ],
   has door openable ~open scenery male;


