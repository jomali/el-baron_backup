!! @Aplique
Atrezzo -> Aplique "aplique"
	has
		container male open ~scenery static,
	private
		loose false,
	with
		name_f 'abrazadera' 'sujeccion',
		name_m 'aplique',
		gender G_MASCULINO,
		adjectives 'hierro' 'oxidada' 'oxidado' 'pared',
		!!
		after [;
			LetGo:
				if (~~self.loose) {
					self.loose = true;
					print "[La Antorcha] está trabada en las sujecciones. Tiras de ella con fuerza hasta que notas cómo se desprende con un chasquido, y la sacas del aplique.";
				} else {
					print "Sacas [la Antorcha] de la abrazadera de hierro.";
				}
				new_line;
				return true;
			Receive:
				print "Colocas de nuevo [el noun] en el aplique de la pared.";
				new_line;
				return true;
		],
		before [;
			Pull:
				if (child(self) == Antorcha && ~~self.loose) {
					self.loose = true;
					print "Tiras con fuerza de [la Antorcha] hasta que notas cómo se libera de la sujección con un chasquido.";
					new_line;
					return true;
				} else {
					<<Turn self>>;
				}
			Push:
				if (child(self) == Antorcha && ~~self.loose) {
					self.loose = true;
					print "Forcejeas con [la Antorcha] hasta que notas cómo se libera de la sujección con un chasquido.";
					new_line;
					return true;
				} else {
					<<Turn self>>;
				}
			PushDir,
			Take,
			Turn,
			Wave:
				print "El aplique está firmemente sujeto a la pared.";
				new_line;
				return true;
			Receive:
				if (noun ~= Antorcha) {
					print "No puedes sujetar [el noun] en el aplique.";
					new_line;
					return true;
				}
		],
		describe [;
			if (child(self) ~= Antorcha) {
				return true;
			} else {
				new_line;
				print "[if:Antorcha has light]Sujet[a Antorcha] a un aplique en la pared, [una Antorcha] arde débilmente y arroja algo de luz y calor en la fría estancia.[else]Ya apagad[a Antorcha] y frí[a Antorcha], [la Antorcha] vuelve a descansar de nuevo en el aplique de la pared.[fi]";
				new_line;
				return true;
			}
		],
		description [;
			print "Una abrazadera de hierro oxidado.";
			new_line;
			return true;
		],
		react_before [;
			Drop:
				if ((noun == Antorcha)
					&& (IndirectlyContains(player, noun))
					&& (second == nothing)) {
					<<Insert noun self>>;
				}
			Pull:
				if ((noun == Antorcha) && (IndirectlyContains(self, noun))) {
					<<Pull self>>;
				} 
			Push:
				if ((noun == Antorcha) && (IndirectlyContains(self, noun))) {
					<<Push self>>;
				} 
		],
		reset [;
			self.loose = false;
			move Antorcha to self;
		],
;

