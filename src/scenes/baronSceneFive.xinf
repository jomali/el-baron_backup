			print "Las luz de la luna emborrona los contornos de las cosas, arrebatándoles su nitidez; parecen fluir entre sí, como los bloques de un sueño en el que nada es lo que parece y todos los significados y significantes se entremezclan unos con otros.";
			new_line;
			return true;
		],
;

!! @CastilloNieve
Atrezzo CastilloNieve "nieve" Limbo
	has female,
	with
		found_in Edificio PatioArmas TorreExterior,
		!!
		name_f 'nieve',
		gender G_FEMENINO,
		!!
		before [;
			Dig,
			LookUnder:
				if (second ~= nothing
					&& second ~= player
					&& IndirectlyContains(player, second)) {
					print "Hurgas aquí y allá entre [la self] con [el second], sin encontrar nada.";
					new_line;
					return true;
				}
				print "Hurgas aquí y allá entre [la self], sin encontrar nada.";
				new_line;
				return true;
			Search:
				<<Dig self>>;
		],
		description [;
			if (self has described) {
				print "La gruesa capa de nieve parece estar intentando asfixiar el pasado bajo su peso.";
			} else {
				print "A veces la nieve otorga a los objetos una cualidad de cuento de hadas al posarse sobre ellos. Hoy no, no esta nieve. Esta nieve parece querer asfixiarlos y enterrarlos para siempre.";
			}
			new_line;
			return true;
		],
		react_before [;
			Dig:
				if (noun == nothing || noun == location) {
					<<Dig self second>>;
				}
		],
;

!! @CastilloParedes
Atrezzo	CastilloParedes "paredes" Limbo
 class	Background,
 has	female pluralname,
 with	found_in Comedor Edificio PatioArmas Sotano,
		name_f 'pared',
		name_fp 'paredes',
		name_m 'muro',
		name_mp 'muros',
		gender G_FEMENINO + G_PLURAL,
		adjectives 'ennegrecida' 'ennegrecidas' 'ennegrecido' 'ennegrecidos',
		!!------------------
		description [;
			print "Los blancos muros de piedra caliza no se ven blancos e inmaculados desde el interior del castillo";
			if (real_location ofclass Outdoors) {
				print ", salvo allí donde hay [CastilloNieve] acumulada";
			}
			print ". Están ennegrecidos y cascados por culpa de algún antiguo fuego.";
			new_line;
			return true;
		],
;

!! @DirTorrePasadizo
AdjacentRoom DirTorrePasadizo "pasadizo" Limbo
	has
		male ~scenery,
	with
		name_m 'pasadizo' 'pasillo',
		gender G_MASCULINO,
		adjectives 'secreto' 'torre',
		!!
		adjacent_room Sotano,
		before [;
			Enter:
				self.AdjacentRoom::before();
				return true;
		],
		describe [;
			new_line;
			if (Sotano has visited) {
				print "Hay [un self] hacia los sótanos, abierto en la pared que quedaba oculta por [el Tapiz].";
			} else {
				print "Hay [un self] abierto en la pared que quedaba oculta por [el Tapiz]. Parece descender a los subsuelos.";
			}
			new_line;
			return true;
		],
		description [;
			if (Tapiz has open) {
				print "Al correr [el Tapiz] has dejado al descubierto la boca de [un self].";
			} else {
				print "[El self] queda oculto tras [el Tapiz].";
			}
			new_line;
			return true;
		]
;


