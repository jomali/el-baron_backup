!! @Tapiz
Array moveFlags -> 2; ! hasta 8 flags
HeavyItem -> Tapiz "tapiz"
	has
		concealed male openable transparent,
	private
		tried_to_open false,
	with
		name_m 'tapiz',
		gender G_MASCULINO,
		adjectives 'mohoso' 'raido',
		!!
		after [;
			Close:
				move DirTorrePasadizo to Limbo;
				switch (Shuffle(3, moveFlags)) {
					1: 
						print "Corres [el self] de nuevo.";
					2:
						print "Tiras [del self] para devolverlo a su posición inicial.";
					3:
						print "Corres [el self] otra vez.";
				}
				new_line;
				return true;
			Open:
				move DirTorrePasadizo to location;
				if (~~self.tried_to_open) {
					self.tried_to_open = true;
					print "Agarras la tela húmeda y tiras de ella hacia un lado. [El Tapiz] se desliza sobre la guía metálica que lo sostiene, dejando al descubierto la boca de [un DirTorrePasadizo] que se ocultaba detrás.";
				} else {
					switch (Shuffle(3, moveFlags)) {
						1:
							print "Descorres [el self] de nuevo.";
						2:
							print "Tiras [del self] para dejar descubierto el paso otra vez.";
						3:
							print "Descorres [el self] otra vez.";
					}
				}
				new_line;
				return true;
		],
		before [;
			Pull, Push:
				if (self has open) {
					<<Close self>>;
				} else {
					<<Open self>>;
				}
		],
		description [
			lightObject;
			lightObject = Baron.get_closest_lit_object();
			print "Es un viejo tapiz oscuro de sombras, de moho y de humedad";
			if (self has open) {
				print ". Al apartarlo hacia un lado ha dejado al descubierto [un DirTorrePasadizo] que desciende hacia las profundidades de la torre.";
			} else {
				print ". [if:self has described]Hasta el punto que sus [MotivosTapiz][else]Hasta tal punto que [los MotivosTapiz] que lo adorna[n MotivosTapiz][fi]";
				if (~~lightObject) {
					print " son imposibles de descifrar en la penumbra";
				} else {
					print " son apenas discernibles a la luz [del lightObject]";
				}
				if (self hasnt described) {
					print ". En épocas pasadas tal vez sirviese para ayudar a aislar la estancia del exterior y evitar que escapase el calor, pero esa es una batalla que perdió hace ya mucho tiempo";
				}
				print ".";
			}
			new_line;
			return true;
		],
		reset [;
			self.tried_to_open = false;
			give self ~open;
		],
