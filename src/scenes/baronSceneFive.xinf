!! @EdificioRastro
HeavyItem -> EdificioRastro "rastro"
	has
		male static,
	with
		short_name [;
 			print "[](rastro:OTHER_OBJECT) de barro";
			return true;
		],
		name_f 'huella',
		name_fp 'huellas',
		name_m 'barro' 'rastro',
		gender G_MASCULINO,
		!!
		before [
			previous_style;
			Pull,
			Push,
			PushDir,
			Take,
			Turn,
			Wave:
				previous_style = Utils.set_text_style(TEXT_STYLE_PARSER);
				print (string) TEXT_STYLE_PARSER_PREFIX;
				print "No puedes manipular ", (el_) self;
				PrintToBuffer(utility_array_a, INPUT_BUFFER_LEN, self);
				PrintCharacterArray(utility_array_a);
				print " de ese modo.";
				print (string) TEXT_STYLE_PARSER_SUFIX;
				Utils.set_text_style(previous_style);
				new_line;
				return true;
		],
		describe [;
			new_line;
			print "A través del gran hueco abierto en el muro [if:Edificio.PC_from_castle_grounds]a tu espalda[else]a tu derecha[fi] se puede salir de vuelta al patio. Hay [un self] que empieza allí y llega hasta [un DirUmbral]";
			if (Comedor.is_lit_up()) {
				print " sin puerta";
			} else {
				print " oscuro, como un rectángulo de tinta negra";
			}
			print ", en una de las paredes que aún siguen en pie";
			if (Comedor.is_lit_up()) {
				print ". Más allá se distingue un débil resplandor";
			}
			print ".";
			new_line;
			return true;
		],
		description [;
			print "Huellas de botas. Hay además un segundo par de marcas, mucho más pequeñas, de unos pies descalzos.";
			new_line;
			return true;
		],
;

